<CustomLabel@Label>:
    text_size: self.size
    valign: "middle"
    padding_x: 5

<CustomLabel1@Label>:
    text_size: self.width, None
    valign: "middle"
    padding_x: 1

<SingleLineTextInput@TextInput>:
    multiline: False

<GreenButton@Button>:
    background_color: 1, 1, 1, 1
    size_hint_y: None
    height: self.parent.height * 0.1

<NormalButton@Button>:
    size_hint: 0.3, 0.1

<CreateWindow>:
    name: "Create"

    user:user
    password:password
    email:email

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint:0.8,0.2
                pos_hint:{"x":0.1, "top":1}
                font_size:(root.width**2 + root.height**2) / 14**4
            Label:
                pos_hint:{"x":0, "top":0.8}
                size_hint:0.5,0.12
                text: "User Name: "
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id:user
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            Button:
                pos_hint:{"x":0.05,"y":0.05}
                size_hint: 0.4, 0.15
                text: "Submit"
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()

            Button:
                pos_hint:{"x":0.55,"y":0.05}
                size_hint: 0.4, 0.15
                text: "Cancel"
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.cancel()

